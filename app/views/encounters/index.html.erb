<div class="d-flex flex-wrap align-items-center row-gap justify-content-between mb-5">
  <h1 class="h3 mb-0 pb-0 font-weight-bold mr-3">Account der Begegnung suchen</h1>
</div>

<div class="table-responsive pb-4">
  <div class="col-lg-8">
    <%= form_with( url: "/encounters/show", method: :get, local: true) do |f| %>
       <div class="row">
        <div class="col">
          <div class="form-group">
            <label for="description">Support ID *</label>
            <%= f.text_field :support_id, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="row justify-content-center pb-4">
        <%= f.submit "Account laden", class: "btn btn-primary btn--big" %>
      </div>
    <% end %>
  </div>
</div>
